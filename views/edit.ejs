<% include partials/header %>

<!-- Title banner -->
<div class="page-break">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h2></h2>
      </div>
    </div>
  </div>
</div>

<!-- Edit form -->
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Edit Idea: <%= idea.title %></h3>
            <form action="/<%= idea._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="idea[title]" value="<%= idea.title %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="idea[description]" cols="100" rows="7"><%= idea.description %></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-block">
                </div>
            </form>
            <hr>
            <a href="../idea/<%= idea._id %>">&larr; Cancel</a>
        </div>
    </div>
</div>

<% include partials/footer %>